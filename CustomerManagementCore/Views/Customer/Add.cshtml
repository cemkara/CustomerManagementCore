@model EntityLayer.Concrete.Customer
@{
    ViewData["Title"] = "New Customer";
}


<div class="card my-4">
    <div class="card-header">
        <div class="row">
            <div class="col-6 d-flex align-items-center">
                <h6 class="mb-0">New Customer</h6>
            </div>
        </div>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Add", "Customer", FormMethod.Post))
        {
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Name</label>
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Surname</label>
                        @Html.TextBoxFor(x=>x.Surname,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Surname,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Username</label>
                        @Html.TextBoxFor(x=>x.Username,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Username,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Phone</label>
                        @Html.TextBoxFor(x=>x.Phone,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Phone,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        <label class="form-label">Mail</label>
                        @Html.TextBoxFor(x=>x.Mail,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Mail,"",new{@style="color:red"})
                </div>
            </div>
            <br />
            <button class="btn btn-outline-success" type="submit">Add</button>
        }
    </div>
</div>
