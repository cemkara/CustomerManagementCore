@using EntityLayer.Concrete
@model Employe
@{
    ViewData["Title"] = "Edit";
}

<div class="card my-4">
    <div class="card-header">
        <div class="row">
            <div class="col-6 d-flex align-items-center">
                <h6 class="mb-0">Edit Employe</h6>
            </div>
        </div>
    </div>

    <div class="card-body">
        @using (Html.BeginForm("Edit", "Employe", FormMethod.Post))
        {
            @Html.HiddenFor(x=>x.EmployeId)
            <div class="row">
                <div class="col-md-12">
                    <div class="input-group input-group-outline my-3">
                        @Html.TextBoxFor(x=>x.Name,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Name,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        @Html.TextBoxFor(x=>x.Surname,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Surname,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        @Html.TextBoxFor(x=>x.Username,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Username,"",new{@style="color:red"})

                    <div class="input-group input-group-outline my-3">
                        @Html.TextBoxFor(x=>x.Password,new {@class="form-control"})
                    </div>
                    @Html.ValidationMessageFor(x=>x.Password,"",new{@style="color:red"})

                    <div class="col-md-2">
                        <div class="input-group input-group-outline my-3">
                            Status: @Html.CheckBoxFor(x=>x.Status,new {@class="form-control"})
                        </div>
                    </div>

                    <div class="input-group input-group-outline my-3">
                        <select asp-for="EmployeTypeId" class="form-control" asp-items="ViewBag.Types"></select>
                    </div>
                </div>
            </div>
            <br />
            <button class="btn btn-outline-success" type="submit">Update</button>
        }
    </div>
</div>
