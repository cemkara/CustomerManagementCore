@model IEnumerable<EntityLayer.Concrete.Product>

@{
    ViewData["Title"] = "Index";
}

<div class="card my-4">
    <div class="card-header pb-0 p-3">
        <div class="row">
            <div class="col-6 d-flex align-items-center">
                <h6 class="mb-0">Products</h6>
            </div>
            <div class="col-6 text-end">
                <a href="/Product/Add" class="btn btn-sm btn-outline-success mb-0">New</a>
            </div>
        </div>
    </div>

    <div class="card-body px-0 pb-2">
        <div class="table-responsive p-0">
            <table class="table align-items-center mb-0">
                <thead>
                    <tr>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Type</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Price</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Status</th>
                        <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.Name
                            </td>
                            <td>
                                @item.ProductCategory.Name
                            </td>
                            <td>
                                @item.Price
                            </td>
                            <td class="align-middle text-center text-sm">
                                @item.Status
                            </td>
                            <td class="align-middle">
                                <a href="/Product/Edit/@item.ProductId" class="btn btn-sm btn-outline-warning">Edit</a>
                                @{
                                    string btnStatusText = "";
                                    string btnStatusClass = "";
                                    if (item.Status)
                                    {
                                        btnStatusText = "Disable";
                                        btnStatusClass = "danger";
                                    }
                                    else
                                    {
                                        btnStatusText = "Activate";
                                        btnStatusClass = "success";
                                    }
                                }
                                <a href="/Product/StatusChange/@item.ProductId" class="btn btn-sm btn-outline-@btnStatusClass">@btnStatusText</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>